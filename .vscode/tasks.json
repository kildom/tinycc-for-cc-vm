{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/ccvm"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build and run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/ccvm"
            }
        },
        {
            "label": "build and compile",
            "type": "shell",
            "command": "make run_compile",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/ccvm"
            }
        }
    ]
}